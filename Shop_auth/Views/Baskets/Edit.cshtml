@model Shop_auth.ViewModels.BasketsViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Potwierdź zamówienie</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>
        <dt>
            @Html.DisplayNameFor(model => model.Details.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Details.Title)
        </dd>
    </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Details.Id)

            <dd>
                @if (Model.Details.Cover != null)
                {
                    <img src="data:image;base64,@Convert.ToBase64String(Model.Details.Cover)" height="300" width="220" />
                }
                else
                {
                    <img src="/Pliki/image_404.png" alt="" height="220" width="300" />
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Details.BuyTime)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Details.BuyTime)
            </dd>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Akceptuj" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
