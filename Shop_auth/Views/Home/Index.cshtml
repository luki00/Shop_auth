@model Shop_auth.ViewModels.BooksViewModel

@{
    ViewBag.Title = "e-Biblioteka";
}

<div class="jumbotron" align="center">
    <h1>e-Biblioteka</h1>
    
</div>
<div class="row">
    @foreach (var item in Model.List)
    {

        <div id="click" class="jumbotron">
            <table><tr><td>
            @if (item.Cover != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(item.Cover)" height="300" width="220" />
            }
            else
            {
                <img src="/Pliki/image_404.png" alt="" height="220" width="300" />
            }
                </td>
                <td>
            <h2>
                &nbsp @Html.DisplayFor(modelItem => item.Title)
            </h2>
            <p>
                &nbsp @Html.DisplayNameFor(model => model.List.FirstOrDefault().Author): @Html.DisplayFor(modelItem => item.Author)
            </p>
            <p>
                &nbsp @Html.DisplayNameFor(model => model.List.FirstOrDefault().Category): @Html.DisplayFor(modelItem => item.Category)
            </p>
            <p>
                &nbsp @Html.DisplayNameFor(model => model.List.FirstOrDefault().ReleaseDate): @Html.DisplayFor(modelItem => item.ReleaseDate)
            </p>
                    </td>
                <td>
                    <p>

                        @Html.ActionLink("Szczegóły", "Details", "Books", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-default btn-lg" })

<p>
                </td>
                </tr>
            </table>
        </div>

    }
</div>